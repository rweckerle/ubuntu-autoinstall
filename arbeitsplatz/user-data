  timezone: Europe/Berlin

  keyboard:
    layout: de

  identity:
    hostname: newmachine
    password: $6$HpYlL5uwmHazzsem$Z1S1zQYCt4LjbsIUhRT6zrWnBJbfyUeuXlHSdUk7t7ttbsdFaza0VxlJyJcso09T3UI6bOI8/O3.kUxZQ2uGj.
    username: phytec

  storage:
    layout:
      name: direct

  ssh:
    allow-pw: true
    install-server: true
    authorized-keys: [ssh-rsa  r.weckerle@phytec.de]

  apt:
    preserve_sources_list: false
    primary:
      - arches: [amd64, i386]
        uri: 'http://de.archive.ubuntu.com/ubuntu/'
        search: 'http://de.archive.ubuntu.com/ubuntu/'

  packages: 
    - language-pack-de-base
    - language-pack-de
    - curl
    - build-essential
    - ubuntu-desktop-minimal
    - sssd
    - sssd-tools
    - samba
    - smbclient
    - cups
    - cifs-utils
    - libpam-mount
    - libpam-ccreds
    - keyutils
    - hxtools
    - realmd
    - adcli
    - vim
